<UserControl
    d:DesignHeight="450"
    mc:Ignorable="d"
    x:Class="InstallyApp.Views.Items.AppInfo"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Styles>
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
        </Style>
    </UserControl.Styles>

    <ScrollViewer>
        <Border
            Background="{DynamicResource PrimaryBackground}"
            CornerRadius="12"
            MaxWidth="300"
            Padding="28">
            <Grid RowDefinitions="Auto, *, Auto, Auto, Auto">
                <Grid ColumnDefinitions="Auto, *">
                    <Border
                        Background="{DynamicResource SecondaryColor}"
                        CornerRadius="50"
                        Height="50"
                        VerticalAlignment="Top"
                        Width="50"
                        x:Name="WrapperIcon" />

                    <Grid Grid.Column="1" HorizontalAlignment="Right">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Text="3.4.1"
                            TextAlignment="Right"
                            x:Name="LatestVersion" />
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Grid.Row="1"
                            Text="by Blender Foundation"
                            x:Name="Publisher" />
                    </Grid>
                </Grid>

                <StackPanel Grid.Row="1" Margin="0,0,0,18">
                    <TextBlock
                        ClipToBounds="True"
                        Margin="0,14,0,0"
                        MaxHeight="80"
                        Text="Blender is the full animation suit, he can handle simulation, rendering, compositing and motion tracking, video editing and 2D animation pipeline. Blender is the free and open source 3D creation suite. It supports the entirety of the 3D pipelineâ€”modeling, rigging, animation, simulation, rendering, compositing and motion tracking, video editing and 2D animation pipeline."
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="Wrap"
                        VerticalAlignment="Top"
                        x:Name="Description" />

                    <Border Background="Transparent" Cursor="Hand">
                        <Grid ColumnDefinitions="Auto, *" Margin="0,14,0,0">
                            <IconButton
                                Classes="small"
                                Click="ButtonShowMore_OnClick"
                                Content="Full Description"
                                Icon="{StaticResource ArrowDownSvg}"
                                x:Name="ButtonShowMore" />
                        </Grid>
                    </Border>
                </StackPanel>

                <Grid
                    ColumnDefinitions="Auto, *"
                    Grid.Row="2"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,20">

                    <IconButton
                        Classes="icon-only"
                        Content=""
                        Icon="{StaticResource TagSvg}"
                        IsHitTestVisible="False"
                        Padding="0,0,0,12"
                        VerticalAlignment="Top" />

                    <WrapPanel
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        Orientation="Horizontal"
                        Width="230"
                        x:Name="TagsList">

                        <WrapPanel.Styles>
                            <Style Selector="Border">
                                <Setter Property="Background" Value="{DynamicResource SecondaryBackground}" />
                                <Setter Property="CornerRadius" Value="5" />
                                <Setter Property="Margin" Value="4 0 4 4" />
                                <Setter Property="Padding" Value="10 2" />
                            </Style>

                            <Style Selector="TextBlock.TextBlockItem">
                                <Setter Property="TextAlignment" Value="Center" />
                                <Setter Property="FontSize" Value="12" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="Margin" Value="0 0 0 2" />
                            </Style>
                        </WrapPanel.Styles>

                        <Border>
                            <TextBlock Classes="TextBlockItem" Text="3d" />
                        </Border>
                        <Border>
                            <TextBlock Classes="TextBlockItem" Text="animation" />
                        </Border>
                        <Border>
                            <TextBlock Classes="TextBlockItem" Text="modeling" />
                        </Border>
                        <Border>
                            <TextBlock Classes="TextBlockItem" Text="render" />
                        </Border>
                        <Border>
                            <TextBlock Classes="TextBlockItem" Text="rigging" />
                        </Border>
                    </WrapPanel>
                </Grid>


