<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <IconButton />
    </Design.PreviewWith>

    <Style Selector="IconButton">
        <Setter Property="Content" Value="Click Me!" />
        <Setter Property="Icon" Value="{StaticResource AddSvg}" />
        <Setter Property="IconColor" Value="{DynamicResource PrimaryText}" />
    </Style>

    <Style Selector="IconButton.text-only">
        <Setter Property="Icon" Value="{x:Null}" />
    </Style>
</Styles>
